<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".home.tabs.SebhaTab.SebhaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/islami_logo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/zekr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/jhannat_font"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/sebha_imv"
            app:layout_constraintBottom_toBottomOf="@id/sebha_imv"
            app:layout_constraintStart_toStartOf="@id/sebha_imv"
            app:layout_constraintEnd_toEndOf="@id/sebha_imv"
            tools:text="الحمد الله" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="-10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/sebha_head"
            app:layout_constraintBottom_toTopOf="@id/sebha_imv"
            app:layout_constraintEnd_toEndOf="@id/sebha_imv"
            app:layout_constraintStart_toStartOf="@id/sebha_imv"

            />
        <ImageView
            android:id="@+id/sebha_imv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/sebha"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/zekr_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jhannat_font"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/zekr_name"
            app:layout_constraintStart_toStartOf="@id/sebha_imv"
            app:layout_constraintEnd_toEndOf="@id/sebha_imv"
            tools:text="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>