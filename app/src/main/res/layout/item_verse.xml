<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/verses_number"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icon_verse"
        android:text="1"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/verses_name_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verses_number"
        android:text="Al-Fatiha"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/verses_number"
        android:layout_marginHorizontal="12dp"/>
    <TextView
        android:id="@+id/ayath_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 Verses"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/verses_name_eng"
        app:layout_constraintStart_toEndOf="@id/verses_number"
        app:layout_constraintBottom_toBottomOf="@id/verses_number"
        android:layout_marginHorizontal="12dp"/>
    <TextView
        android:id="@+id/verses_number_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الفاتحة"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/verses_number"
        app:layout_constraintBottom_toBottomOf="@id/verses_number"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/verses_number_ar"
        android:layout_marginVertical="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>